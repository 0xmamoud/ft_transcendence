{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "paths": {
      "#lib/*": ["./src/lib/*"],
      "#config/*": ["./src/config/*"],
      "#controllers/*": ["./src/controllers/*"],
      "#middlewares/*": ["./src/middlewares/*"],
      "#routes/*": ["./src/routes/*"],
      "#services/*": ["./src/services/*"],
      "#types/*": ["./src/types/*"],
      "#schemas/*": ["./src/schemas/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/avalanche"]
}
