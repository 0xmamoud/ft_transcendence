{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "#types/*": ["../types/*"],
    },
  },
  "include": [
		"src", "types",
    "types/*.d.ts"
, "Interface/IStorage.ts", "../types/global.d.ts"	],
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"**/node_modules/**/*.d.ts",
		"dist",
		"build",
		"coverage"
	]
}
